{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "./",                          
    "rootDir": "./",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata":true,
    "experimentalDecorators": true,
  },
  "include": ["index.ts"],
  "exclude": ["**/node_modules"]
}